<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.wenchao.superirregularview.IrregularDrawView
        android:id="@+id/idv_1"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <com.wenchao.superirregularview.IrregularView
        android:id="@+id/irv_1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/chrome_1" />

    <com.wenchao.superirregularview.IrregularView
        android:id="@+id/irv_2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/chrome_2" />

    <com.wenchao.superirregularview.IrregularView
        android:id="@+id/irv_3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/chrome_3" />

    <com.wenchao.superirregularview.IrregularView
        android:id="@+id/irv_4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/chrome_4" />

</FrameLayout>